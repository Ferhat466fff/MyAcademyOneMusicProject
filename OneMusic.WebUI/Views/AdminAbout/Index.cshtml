@model List<About>//Hakkımda Listeleme
@{
   // @using OneMusic.EntityLayer.Entities Yazmana gerek yok cunku view klasorunde viewımports tanımladık artık.
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController/Index.cshtml";
}

<h3>Hakkımızda</h3>
@{
    int count = 0;
}
<table class="table table-bordred table hover">

    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>İşlemler</th>
       
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:75px;width:75px" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                <a class="btn btn-outline-danger" asp-action="DeleteAbout" asp-route-id="@item.AboutId">Sil</a>@*asp-action- asp-route-id(Parametreyi alıyordu) <a hrefle aynı şey>*@
                <a class="btn btn-outline-info" asp-action="UpdateAbout" asp-route-id="@item.AboutId">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a class="btn btn-outline-primary" asp-action="AddAbout">Yeni Hakkımızda Oluştur.</a>