@model About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayoutController/Index.cshtml";
}

<h3>Yeni Hakkımızda Oluşturma Sayfası</h3>

<form method="post">

    @Html.HiddenFor(x => x.AboutId)

    <label>Resim Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />

    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    @*<input type="text" asp-for="Title" class="form-control" />-->üsttekiyle alttaki aynı*@
    <br />

    <label>Açıklamal</label>
    <textarea type="text" asp-for="Description" class="form-control" rows="4"></textarea>
    <br />

    <button class="btn btn-outline-primary">Kaydet</button>

</form>

