@model Message



<section class="contact-area section-padding-100 bg-img bg-overlay bg-fixed has-bg-img" style="background-image: url(/one-music-gh-pages/img/bg-img/bg-2.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading white wow fadeInUp" data-wow-delay="100ms">
              
                    <h2>Bizimle İletişime Geçin.</h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <!-- Contact Form Area -->
                <div class="contact-form-area">
                    <form asp-controller="Default" asp-action="SendMessage" method="post"> @*Default Controllardaki Send Message action çalıştır.*@
                       
                        <div class="row">
                            <div class="col-md-6 col-lg-4">
                                <div class="form-group wow fadeInUp" data-wow-delay="100ms">
                                    <input type="text" class="form-control" asp-for="Name" placeholder="Adınız Soyadınız">
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-4">
                                <div class="form-group wow fadeInUp" data-wow-delay="200ms">
                                    <input type="email" class="form-control" asp-for="Email" placeholder="E-mail Adresiniz">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group wow fadeInUp" data-wow-delay="300ms">
                                    <input type="text" class="form-control" asp-for="Subject" placeholder="Konu">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group wow fadeInUp" data-wow-delay="400ms">
                                    <textarea  class="form-control" asp-for="Content" cols="30" rows="10" placeholder="Mesajınızı buraya yazın"></textarea>
                                </div>
                            </div>
                            <div class="col-12 text-center wow fadeInUp" data-wow-delay="500ms">
                                <button class="btn oneMusic-btn mt-30" type="submit" onclick=" SendMessage()">Mesajı Gönder <i class="fa fa-angle-double-right"></i></button>
                                @*SWİRH ALERT kullanıyoruz onclick içine methoduzmuzu yazdık*@
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@*Burası Silmek İstediğinize Emin Misiniz Diye Sorulacağı Yer*@
<script>

    function SendMessage() {

        Swal.fire({
            title: "Tebrikler",
            text: "Mesajınız Gönderildi!",
            icon: "success",
            showCancelButton: false,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Tamam",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {

                window.location.href = "/Default/Index/";

            }
        });

    }


</script>
@*Çalışması İçin AdminLayoutIdnexine https://sweetalert2.github.io/ Web Sitesinden yolunu verdik--> <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>*@
