@model Singer
@{
    ViewData["Title"] = "AddSinger";
    Layout = "~/Views/AdminLayoutController/Index.cshtml";
}

<h3>Yeni Sanatçı Ekleme Sayfası</h3>

<form method="post">

    <label>Resim Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <span class="text-danger" asp-validation-for="ImageUrl"></span>@*Sayfa yüklendiğinde bir şey gözükmeyecek Hata mesajı alırsak gösterecek.
    *@
    <br />

    <label>Sanatçı Adı</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    @*<input type="text" asp-for="Title" class="form-control" />-->üsttekiyle alttaki aynı*@
    <span class="text-danger" asp-validation-for="Name"></span>
    <br />

    <button class="btn btn-outline-primary">Kaydet</button>

</form>

