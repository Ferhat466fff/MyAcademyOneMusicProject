@model List<Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController/Index.cshtml";
    int count = 0;
}
<h3>Gelen Mesajlar</h3>
<table class="table table-bordered table-hover">
    <tr>

        <th>#</th>
        <th>İsim - Soyisim</th>
        <th>E-Mail</th>
        <th>Konu</th>
        <th>İçerik</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Subject</td>
            <td>@item.Content</td>
            <td>
                <button class="btn btn-outline-danger" onclick="deleteMessage(@item.MessageId)">Sil </button>@*Onclick-->Tıklanırsa Hangi fonksiyon Çalışsın*@
                
            </td>
        </tr>
    }
</table>
@*Burası Silmek İstediğinize Emin Misiniz Diye Sorulacağı Yer*@
<script>
    function deleteMessage(id) {

        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {//Sil Tıklanırsa Ne Yapsın.

                window.location.href = "/AdminMessage/DeleteMessage/" + id;//Sile Yönlendirdik
            }
        });

    }
</script>
@*Çalışması İçin AdminLayoutIdnexine https://sweetalert2.github.io/ Web Sitesinden yolunu verdik--> <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>*@


